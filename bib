@article{Altamirano Altamirano_Catalán Sandoval_González Sepúlveda_2024,
title={Percepción de riesgo en torno al consumo de alcohol, 
marihuana y cocaína que tienen estudiantes de educación superior en una 
universidad pública de la región de los Lagos: Perception of risk around 
the consumption of alcohol, marijuana and cocaine among students at a 
public university in los Lagos region }, volume={5},
url={https://latam.redilat.org/index.php/lt/article/view/3207}, 
DOI={10.56712/latam.v5i6.3207}, abstractNote={&amp;lt;p&amp;gt;
El objetivo del presente estudio fue determinar la percepción de riesgo que 
tienen los alumnos en una universidad pública en la región de los Lagos, 
en torno al consumo de alcohol, marihuana y cocaína. Se utilizó un enfoque 
metodológico cuantitativo de alcance descriptivo, donde se aplicó un cuestionario
online a estudiantes del campus Puerto Montt, la población total fue de 1683 y 
una muestra de 205 encuestados. El instrumento se adaptó en base al cuestionario
del XIII Estudio Nacional de Drogas en Población General de Chile, 2018; 
y Alcohol, Smoking and Substance Involvement Screening Test (ASSIST) validado 
para Chile. Entre los resultados, destaca que las áreas de conocimiento en salud 
perciben con mayor riesgo el consumo de sustancias, asimismo, la percepción de 
riesgo disminuye en el uso mensual y aumenta a mayor frecuencia de uso, finalmente, 
se evidencia que las mujeres poseen mayor percepción de riesgo al consumo de 
sustancias.&amp;lt;/p&amp;gt;}, number={6}, journal={LATAM Revista Latinoamericana 
de Ciencias Sociales y Humanidades}, author={Altamirano Altamirano, Bárbara 
Estefanía and Catalán Sandoval, Cristopher Eduardo and González Sepúlveda , 
Mauricio}, year={2024}, month={dic.}, pages={2817 – 2831} }

